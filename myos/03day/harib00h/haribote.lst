     1 00000000                                 ; haribote-os
     2 00000000                                 ; TAB=4
     3 00000000                                 
     4 00000000                                 ;有关BOOT_INFO
     5  = 00000FF0                              CYLS	EQU		0x0ff0		;设定启动区
     6  = 00000FF1                              LEDS	EQU		0x0ff1		;键盘指示灯状态
     7  = 00000FF2                              VMODE	EQU		0x0ff2		;关于颜色数目的信息。颜色位数。
     8  = 00000FF4                              SCRNX	EQU		0x0ff4		;分辨率的X
     9  = 00000FF6                              SCRNY	EQU		0x0ff6		;分辨率的Y
    10  = 00000FF8                              VRAM	EQU		0x0ff8		;图像缓冲区的开始地址
    11 00000000                                 
    12                                          		ORG		0xc200		;这个程序会被装载到内存的这个位置	
    13 0000C200 B0 13                           		MOV		AL,0x13		;VGA显卡，320*200*8位彩色
    14 0000C202 B4 00                           		MOV		AH,0x00
    15 0000C204 CD 10                           		INT		0x10
    16 0000C206 C6 06 0FF2 08                   		MOV		BYTE [VMODE],8	;记录画面模式
    17 0000C20B C7 06 0FF4 0140                 		MOV		WORD [SCRNX],320
    18 0000C211 C7 06 0FF6 00C8                 		MOV		WORD [SCRNY],200
    19 0000C217 66 C7 06 0FF8 000A0000          		MOV		DWORD [VRAM],0x000a0000
    20 0000C220                                 		
    21 0000C220                                 ;用BIOS取得键盘上各种LED指示灯的状态
    22 0000C220 B4 02                           		MOV		AH,0x02
    23 0000C222 CD 16                           		INT		0x16		;键盘BIOS
